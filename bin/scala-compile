#!/bin/sh -eu

ok_message="ok"
while [ $# -gt 0 ]; do
    case "$1" in
        -m) ok_message=$2 ; shift ;;
        -M) ok_message="" ;;
        --) shift ; break ;;
        -*) echo "ERROR: Invalid option '$1' for $0" >&2 ; exit 64 ;;
        *) break ;;
    esac
    shift
done

if [ -z "${SCALACFLAGS+x}" ]; then
    SCALACFLAGS="-encoding utf-8 -deprecation -feature -language:postfixOps"
fi

move-to-package-dirs -d '\n' -f '*.scala' -- "$@" | (
    set --
    while read file; do
        set -- "$@" "$file"
    done
    if [ -z "$1" ]; then
        echo "ERROR: no files to compile" >&2
        exit 1
    fi

    set -x
    "${SCALAC:-scalac}" -d . $SCALACFLAGS "$@"
    RES=$?
    [ $RES -eq 0 -a "$ok_message" ] && echo "$ok_message"
    exit $RES
)
